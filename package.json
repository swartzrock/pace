{
	"name": "pace",
	"version": "0.3.0",
	"description": "Pace yourself with this command line timer",
	"author": "Jason Swartz @swartzrock",
	"bin": {
		"pace": "./bin/run"
	},
	"homepage": "https://github.com/swartzrock/pace",
	"license": "ISC",
	"main": "dist/index.js",
	"repository": "swartzrock/pace",
	"files": [
		"/bin",
		"/dist",
		"/npm-shrinkwrap.json",
		"/oclif.manifest.json"
	],
	"dependencies": {
		"@oclif/core": "^1.20.2",
		"@oclif/plugin-help": "^5.1.17"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.18.6",
		"@oclif/test": "^2.2.8",
		"@types/chai": "^4",
		"@types/figlet": "^1.5.4",
		"@types/jest": "^29.2.1",
		"@types/lodash": "^4.14.187",
		"@types/node": "^18.11.9",
		"@types/signal-exit": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"chai": "^4",
		"eslint": "^8.26.0",
		"eslint-config-prettier": "^8.5.0",
		"figlet": "^1.5.2",
		"jest": "29.2.2",
		"lodash": "^4.17.21",
		"mem-fs": "^2.2.1",
		"mem-fs-editor": "^9.5.0",
		"pkg": "^5.8.0",
		"prettier": "2.7.1",
		"shx": "^0.3.3",
		"signal-exit": "^3.0.7",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"winston": "^3.8.2"
	},
	"oclif": {
		"bin": "pace",
		"dirname": "pace",
		"default": "timer",
		"commands": "./dist/commands",
		"plugins": [
			"@oclif/plugin-help"
		],
		"topicSeparator": " ",
		"additionalHelpFlags": [
			"-h"
		],
		"topics": {
			"tools": {
				"description": "Tools for testing out pace"
			}
		}
	},
	"scripts": {
		"build": "shx rm -rf dist && tsc -p tsconfig.build.json",
		"lint": "eslint .",
		"compress-linux-arm64": "(cd dist && tar cvfj pace-linux-arm64.tar.bz2 pace-linux-arm64)",
		"compress-linux-x64": "(cd dist && tar cvfj pace-linux-x64.tar.bz2 pace-linux-x64)",
		"compress-macos-x64": "(cd dist && tar cvfj pace-macos-x64.tar.bz2 pace-macos-x64)",
		"compress-win-x64": "(cd dist && tar cvfj pace-win-x64.exe.tar.bz2 pace-win-x64.exe)",
		"compress-all": "yarn compress-linux-arm64 && yarn compress-linux-x64 &&  yarn compress-macos-x64 && yarn compress-win-x64",
		"pkg": "yarn build && pkg . -C Brotli"
	},
	"engines": {
		"node": ">=18.11.0"
	},
	"bugs": "https://github.com/swartzrock/pace/issues",
	"keywords": [
		"timer",
		"ansi"
	],
	"types": "dist/index.d.ts",
	"jest": {
		"verbose": true,
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/dist/",
			"<rootDir>/node_modules/"
		]
	},
	"pkg": {
		"scripts": "dist/**/*.js",
		"assets": [
			"node_modules/figlet/fonts/**/*"
		],
		"targets": [
			"node18-linux-arm64",
			"node18-linux-x64",
			"node18-macos-x64",
			"node18-win-x64"
		],
		"outputPath": "dist"
	}
}
